{
    "settings": {
        "analysis": {
            "analyzer": {
                "default": {
                    "tokenizer": "standard",
                    "filter": ["standard", "lowercase", "my_ascii_folding"]
                },
                "special_analyzer": {
                    "type": "custom",
                    "tokenizer": "whitespace",
                    "filter": ["standard", "lowercase", "my_ascii_folding", "hashtag_filter"]
                }
            },
            "filter": {
                "my_ascii_folding": {
                    "type": "asciifolding",
                    "preserve_original": true,
                    "generate_word_parts": false,
                    "stem_english_possessive": false,
                    "catenate_words": true,
                    "catenate_numbers": true,
                    "catenate_all": true
                },
                "hashtag_filter": {
                    "type": "word_delimiter",
                    "type_table": [
                        "# => ALPHANUM",
                        "@ => ALPHANUM",
                        "$ => ALPHANUM"
                    ]
                }
            }
        }
    },
    "mappings": {
        "product": {
            "properties": {
                "category": {
                    "type": "object",
                    "properties": {
                        "name" : {
                            "type": "string",
                            "fields": {
                                "raw" : {
                                    "type": "string",
                                    "index": "not_analyzed"
                                }
                            }
                        }
                    }
                },
                "description": {
                    "type": "string",
                    "analyzer": "special_analyzer"
                },
                "province": {
                    "type": "object",
                    "properties": {
                        "name" : {
                            "type": "string",
                            "fields": {
                                "raw" : {
                                    "type": "string",
                                    "index": "not_analyzed"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
